{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Notism API (HTTP)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Notism.Api/bin/Debug/net9.0/Notism.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Notism.Api",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": true,
                "args": "http://localhost:5000/swagger",
                "osx": {
                    "command": "open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5000"
            }
        },
